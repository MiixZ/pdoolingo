---
import Layout from '../layouts/Layout.astro';
import InsigniaItem from '../components/InsigniaItem.astro';
import Insignia from '../icons/Insignia.astro';

const username = "username";    // Aquí se debe de poner el nombre de usuario del usuario que está logueado
---

<Layout title="PDOOLingo - Insignias">
    <h1 class="m-4 text-center text text-4xl text-gray-200 font-bold"> ¡HOLA, {username}! </h1>
    <h2 class="m-4 text-center text text-3xl text-gray-200 font-bold"> Tus insignias: </h2>
    <div class="w-full flex items-center justify-center">
        <table class="m-4 border-x-4 border-t-4 border-gray-600">
            <InsigniaItem
                text="Insignia de prueba" 
                experience={100}
                experienceMax={1000}
            />

            <InsigniaItem 
                text="Insignia de prueba 2" 
                experience={200}
                experienceMax={2000}
            />
        </table>
    </div>
</Layout>