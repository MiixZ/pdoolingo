---
import AsideMenu from '@components/aside/AsideMenu.astro';
import AsideLogo from '@components/aside/components/AsideLogo.astro';

import Head from './head.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<Head title={title}>
    <body>
        <div id="app" class="relative h-screen">
            <aside class="[grid-area:aside] flex-col flex overflow-y-auto bg-slate-800 border-r-4 border-gray-600">
                <AsideMenu />
            </aside>
            <main class="[grid-area:main] bg-slate-800 overflow-auto">
                <slot />
            </main>

            <footer class="[grid-area:footer] flex justify-center gap-2 w-full bg-slate-900 h-auto">
                <AsideLogo />
                <span class="flex justify-center items-center">
                    Todos los derechos reservados. &copy; 2024
                </span>   
            </footer>
        </div>
    </body>
</Head>

<style>
    #app {
        display: grid;
        grid-template-areas: "aside main main"
                             "footer footer footer";
        grid-template-columns: 275px 1fr;
        grid-template-rows: 1fr auto;
    }

    @media (max-width: 800px) {
        #app {
            display: grid;
            grid-template-areas: "aside main main"
                                 "footer footer footer";
            grid-template-columns: 275px 1fr;
            grid-template-rows: 1fr auto;
        }

        aside {
            overflow-x: auto;
            overflow-y: auto;
        }
    }
</style>

<style is:global>
    :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }

    html {
        font-family: din-round, sans-serif;
        background: #13151a;
        background-size: 224px;
        --tw-text-opacity: 1;
        color: rgb(229 231 235 / var(--tw-text-opacity));
        min-width: 1000px;
    }

    body {
        min-width: 1000px;
    }

    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
</style>
