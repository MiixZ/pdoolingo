---
interface Props {
    n_respuesta : number;
}

const { n_respuesta } = Astro.props;
---

<div class="flex flex-col sm:flex-row p-3 gap-0 rounded-xl bg-green-800 items-center justify-center w-full lg:w-1/2 mx-auto">
    <input
    class="rounded-xl p-1 text-center w-full lg:w-1/2 mx-auto"
    type="text"
    id={"respuesta" + n_respuesta}
    name={"respuesta" + n_respuesta}
    placeholder="Agrega el texto de la respuesta"
    />
    <div class="flex flex-col h-auto w-full items-center justify-center lg:w-1/2">
        <label class="font-bold p-1" for={"correcta" + n_respuesta}>Â¿Es correcta?</label>
        <input
        class="rounded-xl p-1 text-center w-full sm:w-1/3 text-black"
        type="checkbox"
        id={"correcta" + n_respuesta}
        name={"correcta" + n_respuesta}
        />
    </div>
</div>