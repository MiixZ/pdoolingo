---
import Checkbox from '@components/utils/checkbox.astro';

interface Props {
  n_respuesta: number;
}

const { n_respuesta } = Astro.props;
---

<div class="flex flex-col lg:flex-row items-center text-black gap-5 text-xl rounded-xl w-full">
    <input
        class="inputs rounded-xl p-1 text-center w-full bg-gray-400 hover:bg-zinc-800 hover:text-white focus:bg-zinc-900 focus:text-white duration-500 ease-in-out"
        type="text"
        id={"respuesta" + n_respuesta}
        name={"respuesta" + n_respuesta}
        placeholder="Agrega el texto de la respuesta"
    />

    <Checkbox id={"correcta" + n_respuesta} name={"correcta" + n_respuesta} />
</div>
