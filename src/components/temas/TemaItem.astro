---
import type { Tema } from "@interfaces/Tema";
import type { Usuario } from "@interfaces/Usuario";

import Formulario from "@components/ejercicios/formulario/crear/Formulario";

import { getEjerciciosTema } from "@services/temas";

interface Props {
    tema?: Tema;
    usuario?: Usuario | null | false;
}

const { tema, usuario } = Astro.props;
---

<div class="flex flex-col justify-center items-center rounded-lg w-full p-10 bg-slate-700 bg-opacity-80">
    <span class="flex justify-center items-center gap-20">
        <h1 class="text-4xl font-bold text-white"> {tema?.titulo}</h1>
        <p class="text-2xl text-white">{ tema?.descripcion }</p>
    </span>

    <slot />
    { usuario && usuario.tipo === "admin" && <Formulario usuario={usuario} id_tema={tema?.id} client:load /> }
</div>